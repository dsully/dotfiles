#!{{ lookPath "fish" }}

# Various clean-up steps.
# vim:ft=fish

source "$CHEZMOI_SOURCE_DIR/.chezmoiscripts/.00_helpers.fish"

task "Cleaning up..."

if is_macos
    set APPS /Applications/GarageBand.app
    set HAS_APP false

    for app in $APPS
        if test -e $app
            set HAS_APP true
            break
        end
    end

    if test $HAS_APP = true
        sudo -v
        start "Removing unwanted apps.."

        for app in $APPS
            start "Removing $app"
            sudo rm -rf $app
        end
    end
end

# Clean up bootstrapped executables.
rm -f "$HOME/.local/bin/chezmoi"

rm -rf "$HOME/.bash*"
rm -f "$HOME/.sudo_as_admin_successful"

echo
