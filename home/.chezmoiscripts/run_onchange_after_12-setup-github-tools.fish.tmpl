#!{{ lookPath "fish" }}

# Install GitHub tools via git-rel
# vim:ft=fish
#
# Config file hash: {{ include "dot_config/gitrel/config.toml.tmpl" | sha256sum }}

set CHEZMOI_SOURCE_DIR (chezmoi source-path)
source "$CHEZMOI_SOURCE_DIR/.chezmoiscripts/.00_helpers.fish"

if type -q install-release

    start "Installing GitHub tools"

    command gitrel update >/dev/null 2>&1

    echo
else
    error "'gitrel' is not installed. It should be installed via Rust Tools"
end
