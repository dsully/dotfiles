# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4
max_line_length = 160

[*.go]
indent_size = 8
indent_style = tab

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[*.gradle]
indent_size = 2

[package.json]
indent_size = 2

[*.{js,ts,json,jsonc}]
indent_size = 2

[*.json]
indent_size = 2

[*.lua]
indent_size = 4
max_line_length = 160
quote_style = double
