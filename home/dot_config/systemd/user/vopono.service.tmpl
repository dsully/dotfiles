{{- if eq .chezmoi.hostname "server" -}}
# vim:ft=systemd
[Unit]
Description=Vopono
After=network.target

[Service]
ExecStart=/usr/bin/vopono exec \
    --interface=eth0 \
    --forward=9091 \
    --provider=Mullvad \
    --protocol=Wireguard \
    --open-ports=54891 \
    --custom-netns-name=mullvad \
    --server=usa-ussjc001 \
    '/usr/bin/qbittorrent-nox --webui-port=9091 --profile=/bits/media/torrents'
Type=simple
Restart=on-failure

[Install]
WantedBy=default.target
{{- end -}}
