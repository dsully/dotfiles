{
    "$schema": "https://raw.githubusercontent.com/EmmyLuaLs/emmylua-analyzer-rust/refs/heads/main/crates/emmylua_code_analysis/resources/schema.json",
    "diagnostics": {
        "disable": [
            "missing-fields",
            "type-not-found",
            "undefined-field"
        ],
        "globals": [
            "Snacks",
            "bit",
            "colors",
            "defaults",
            "ev",
            "hl",
            "keys",
            "ns",
            "nvim",
            "package",
            "require",
            "vim"
        ],
        "unusedLocalExclude": [
            "_*"
        ]
    },
    "runtime": {
        "version": "LuaJIT"
    },
    "workspace": {
        "library": [
            "$VIMRUNTIME",
            "$XDG_DATA_HOME/nvim/lazy/"
        ],
        "workspaceRoots": [
            "lua"
        ]
    }
}
