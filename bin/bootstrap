#!/usr/bin/env bash

# Bootstrap my dotfiles.
#
# https://joeyates.info/2018/12/16/dotfiles/

URL=git@github.com:dsully/dotfiles.git
DOT=$HOME/.config/repos/dotfiles

git clone --bare "$URL" "$HOME/$DOT"

cd "$HOME/$DOT" || exit
git config --local core.bare false
git config --local core.worktree "$HOME"
git config --local status.showUntrackedFiles no
git reset

# This overwrites any existing files.
# git reset --hard HEAD --

echo "gitdir: $DOT" > "$HOME/.git"

git clone git@github.com:dsully/dotfiles-private.git "$HOME"/.config/repos/private
