#!/usr/bin/env python3

# Calculate a Peg score for email. From Grillo.

import re
import sys

f = sys.stdin.readline()

if re.search(r':\s+\S', f):
    while True:
        line = sys.stdin.readline()
        if not line.strip():
            break

e, q, r, p, m, s = 0, 0, 0, 0, 0, 0

while True:
    line = sys.stdin.readline()
    if not line:
        break
    if line.startswith(('>', '|')):
        continue
    if line.strip() == '--':
        break

    j = line
    e += len(re.findall(r'!', j))
    q += len(re.findall(r'\?', j))
    r += len(re.findall(r'\.\.\.?( +|$)', j))
    p += len(re.findall(r'\.', j))
    m += len(re.findall(r'=[)(]|:-[)(]', j))
    s += len(re.findall(r'[!?\.]+( +|$)', j))

if s:
    peg_score = 100 * ((e * 1.25) + q + p + (m * 1.375) + (r * 0.5)) / s
    print(f"{s} sentence(s): {e} exclamation mark(s), {q} question mark(s), {p} period(s), {r} ellipse(s), {m} smilies")
    print(f"peg score: {peg_score:.1f}")
