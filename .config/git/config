[alias]
    a = commit --amend
    aa = add --all
    amend = commit --amend
    co = checkout
    dc = diff --cached
    last = log -1 HEAD
    sync = pull --rebase
    unstage = reset HEAD --
    # Check out a pull request.
    pr = "!f() { git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1 && git checkout pr/$1; }; f"
[advice]
    skippedCherryPicks = false
[branch]
    autosetupmerge = true
    autosetuprebase = always
[color]
    branch = auto
    interactive = auto
    status = auto
    ui = true
[core]
    trustctime = false
    # pager = delta --dark --file-style=box --hunk-style=plain --theme=base16
    pager = diff-so-fancy | less --tabs=4 -RFX
[diff]
    noprefix = true
[help]
    autoCorrect = immediate
[push]
    default = current
	autoSetupRemote = true
[rebase]
    autosquash = true
[status]
    relativePaths = true

[submodule ".config/kitty/kitty_search"]
    path = .config/kitty/kitty_search
    url = https://github.com/trygveaa/kitty-kitten-search

[include]
    path = ~/.config/git/private
[includeIf "gitdir:~/dev/linkedin/"]
    path = ~/.config/git/linkedin
