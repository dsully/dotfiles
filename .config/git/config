[alias]
    a = commit --amend
    aa = add --all
    amend = commit --amend
    co = checkout
    dc = diff --cached
    last = log -1 HEAD
    sync = pull --rebase
    unstage = reset HEAD --
[advice]
    skippedCherryPicks = false
[branch]
    autosetupmerge = true
    autosetuprebase = always
[color]
    branch = auto
    interactive = auto
    status = auto
    ui = true
[core]
    trustctime = false
    # pager = delta --dark --file-style=box --hunk-style=plain --theme=base16
    pager = diff-so-fancy | less --tabs=4 -RFX
[credential]
    helper = /usr/local/bin/git-credential-manager-core
    credentialStore = cache
[diff]
    noprefix = true
[help]
    autoCorrect = immediate
[push]
    default = current
[rebase]
    autosquash = true
[status]
    relativePaths = true

[include]
    path = ~/.config/git/private
[includeIf "gitdir:~/dev/linkedin/"]
    path = ~/.config/git/linkedin
#[init]
